---
interface ExperienceItem {
  title: string;
  company: string;
  period: string;
  description: string[];
  type: "professional" | "extracurricular";
  skills: string[];
}

const experiences: ExperienceItem[] = [
  {
    title: "Cybersecurity & Operations Analyst",
    company: "SWAT Consulting Services",
    period: "Nov 2025 – Present",
    description: [
      "Led vulnerability and patch management across Windows, Linux, and Oracle workloads.",
      "Performed technical risk assessments and validation to maintain operational stability.",
      "Enhanced compliance processes under ISO 27001/SGI and automated recurring security tasks."
